<% provide(:title, current_user.name) %>
<div class="row records meal_records">
  <div class="col-md-4 record_form">
    <%= render 'new' %>
  </div>
  <div class="col-md-offset-1 col-md-7">
    <div class="records_table meal_records_table">
      <table>
        <tr>
        <% MealRecord.column_names[1..7].each_with_index do |header, idx| %>
          <th><%= MealRecord.human_attribute_name header %></th>
        <% end %>
        </tr>
        <%= render @meal_records %>
      </table>
    </div>
  </div>

</div>
