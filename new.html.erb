<% provide(:title, current_user.name) %>
<div class="row records">
  <div class="col-md-4 record_form">
    <%= render 'new' %>
  </div>
  <div class="col-md-offset-1 col-md-7 records_table">
    <table>
      <tr>
      <% HealthRecord.column_names[1..7].each_with_index do |header, idx| %>
        <th><%= HealthRecord.human_attribute_name header %></th>
      <% end %>
      </tr>
      <%= render @health_records %>
    </table>
  </div>
</div>
