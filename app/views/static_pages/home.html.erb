<% if logged_in? %>
  <% if @feed_items.count.zero? %>
    <div class="login_home_message">
      <h1>Muscle Platformへようこそ</h1>
      <p>筋トレ仲間を見つけて、最高の筋トレライフを送ろう！</p>
    </div>
    <div class="trend_feed">
      <h2>人気の投稿</h2>
      <%= render 'shared/feed' %>
    </div>
  <% else %>
    <%= render 'shared/feed' %>
  <% end %>
<% else %>
  <div class="row">
    <div class="home_message col-xs-7 px-0">
      <h1 class="text-left">Muscle Platformで
        <br>理想の筋肉を</h1>
    </div>

    <div class="col-xs-5 px-0">
      <%= render 'shared/signup', { col: @col, frame_design:@frame_design } %>
    </div>


  </div>
<% end %>
