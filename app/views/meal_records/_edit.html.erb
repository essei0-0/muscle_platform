<div class="row record_edit meal_record_edit">
  <%= form_with model: @meal_record, local: true do |f| %>
  <div class="record_edit_form_header">
    <button type="button" id="meal_record_edit_close" class="close">&times;</button>
    <%= f.submit "記録する", class: "btn btn-primary" %>
  </div>

  <div class="col-md-4 record_edit_form_left">
    <div class="form-group">
      <%= f.label :base_gram %>
      <span>※整数で入力してください</span>
      <div class="record_input">
        <%= f.number_field :base_gram, class: "form-control", id: "edit_base_gram", min: "1" %>
        <span class="record_unit">(g, 個, 人前) あたり</span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :protein %>
      <span>※小数点第1位まで入力できます</span>
      <div class="record_input">
        <%= f.number_field :protein, class: "form-control", id: "edit_protein", step: "0.1", min: "0" %>
        <span class="record_unit">g</span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :fat %>
      <span>※小数点第1位まで入力できます</span>
      <div class="record_input">
        <%= f.number_field :fat, class: "form-control", id: "edit_fat", step: "0.1", min: "0" %>
        <span class="record_unit">g</span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :carbo %>
      <span>※小数点第1位まで入力できます</span>
      <div class="record_input">
        <%= f.number_field :carbo, class: "form-control", id: "edit_carbo", step: "0.1", min: "0" %>
        <span class="record_unit">g</span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :food %>
      <div class="record_input">
        <%= f.text_field :food, class: "form-control food", id: "edit_food" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :ate_gram %>
      <span>※小数点第1位まで入力できます</span>
      <div class="record_input">
        <%= f.number_field :ate_gram, class: "form-control", id: "edit_ate_gram", step: "0.1", min: "0.1" %>
        <span class="record_unit">(g, 個, 人前) 食べた</span>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :ate_at %>
      <%= f.datetime_local_field :ate_at, class: "form-control datetime" %>
    </div>

  </div>
  <div class="col-md-offset-1 col-md-7 record_edit_form_right">
    <div class="form-group note">
      <%= f.label :note %>
      <%= f.text_area :note, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :picture %>
      <%= f.file_field :picture %>
    </div>

  </div>
  <% end %>

</div>
