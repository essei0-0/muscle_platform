<li class="" id="micropost-<%= micropost.id %>">
  <article class="">
    <a href="<%= micropost_url(micropost.id) %>">
      <% if @user.nil? %>
      <header>
        <% if micropost.user.image_name? %>
        <div class="feed_profile_img">
          <%= image_tag micropost.user.image_name.url %>
        </div>
        <% end %>
        <div class="">
          <%= micropost.user.name %>
        </div>
      </header>
      <div class="feed_main_img">
        <%= image_tag micropost.picture.url if micropost.picture? %>
      </div>
      <div class="feed_content">
        <span><%= micropost.content %></span>
      </div>
      <div class="timestamp">
        <span><%= time_ago_in_words(micropost.created_at) %> ago.</span>
      </div>
      <% else %>
      <div class="garaly_img">
        <%= image_tag micropost.picture.url if micropost.picture? %>
      </div>
      <% end %>
    </a>
  </article>
</li>
